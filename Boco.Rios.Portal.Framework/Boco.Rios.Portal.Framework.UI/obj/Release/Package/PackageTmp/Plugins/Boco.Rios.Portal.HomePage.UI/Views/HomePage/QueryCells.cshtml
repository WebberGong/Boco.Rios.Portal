@{
    ViewBag.Title = "QueryCells";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div id="kendoui" class="k-content">
        <button id="btnQuery1" class="k-button" type="button">真分页查询</button>
        <div id="grid1" style="font-size: 0.85em"></div>
        <script type="text/javascript">
            $(document).ready(function () {
                var url = homePageServiceBaseUrl + 'api/json/reply/CellPagingRequest';
                var dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            type: "post",
                            url: url,
                            dataType: "jsonp"
                        },
                        parameterMap: function (options, operation) {
                            if (operation == "read") {
                                var parameter = {
                                    Name: "cell",
                                    Lac: 100,
                                    Ci: 200,
                                    Page: options.page,
                                    PageSize: options.pageSize
                                };
                                return parameter;
                            }
                            return null;
                        }
                    },
                    batch: true,
                    pageSize: 20,
                    schema: {
                        data: function (result) {
                            return result.Data;
                        },
                        total: function (result) {
                            return result.TotalCount;
                        }
                    },
                    serverPaging: true,
                    serverFiltering: false,
                    serverSorting: false
                });

                $("#grid1").kendoGrid({
                    dataSource: dataSource,
                    sortable: false,
                    scrollable: false,
                    pageable: {
                        refresh: true,
                        pageSizes: false,
                        buttonCount: 10,
                        messages: {
                            display: "{0} - {1} 共 {2} 条数据",
                            empty: "没有要显示的数据",
                            first: "首页",
                            previous: "上一页",
                            next: "下一页",
                            last: "末页",
                            refresh: "刷新"
                        }
                    },
                    columns: [
                        { field: "IntId", title: "编号" },
                        { field: "Name", title: "名称" },
                        { field: "Lac", title: "LAC" },
                        { field: "Ci", title: "CI" }
                    ]
                });
            });

            $("#btnQuery1").click(function () {
                $("#grid1").data("kendoGrid").dataSource.read();
            });
        </script>
        
        <button id="btnQuery2" class="k-button" type="button">假分页查询</button>
        <div id="grid2" style="font-size: 0.85em"></div>
        <script type="text/javascript">
            $(document).ready(function () {
                var url = homePageServiceBaseUrl + 'api/json/reply/CellRequest';
                var param = { Name: "cell", Lac: 1, Ci: 2 };
                var dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            type: "post",
                            dataType: "jsonp",
                            async: true,
                            url: url,
                            data: param
                        }
                    },
                    pageSize: 20,
                    schema: {
                        data: function (result) {
                            return result.Data;
                        },
                        total: function (result) {
                            return result.TotalCount;
                        }
                    },
                    serverPaging: false,
                    serverFiltering: false,
                    serverSorting: false
                });
                $("#grid2").kendoGrid({
                    dataSource: dataSource,
                    sortable: true,
                    scrollable: false,
                    pageable: {
                        refresh: true,
                        pageSizes: false,
                        buttonCount: 10,
                        messages: {
                            display: "{0} - {1} 共 {2} 条数据",
                            empty: "没有要显示的数据",
                            first: "首页",
                            previous: "上一页",
                            next: "下一页",
                            last: "末页",
                            refresh: "刷新"
                        }
                    },
                    columns: [
                        { field: "IntId", title: "编号" },
                        { field: "Name", title: "名称" },
                        { field: "Lac", title: "LAC" },
                        { field: "Ci", title: "CI" }
                    ]
                });
            });

            $("#btnQuery2").click(function () {
                $("#grid2").data("kendoGrid").dataSource.read();
            });
        </script>
    </div>
</div>
